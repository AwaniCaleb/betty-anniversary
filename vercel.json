{
    "version": 2,
    "name": "betty-anniversary",
    "builds": [
        { "src": "package.json", "use": "@vercel/static-build" },
        { "src": "api/**/*.js", "use": "@vercel/node" }
    ],
    "rewrites": [
        {
            "source": "/dreamy",
            "destination": "/dist/concept-dreamy.html"
        },
        {
            "source": "/elegant",
            "destination": "/dist/minimalist-elegant.html"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/dist/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    },
    "functions": {
        "api/**/*.js": {
            "memory": 128,
            "maxDuration": 10
        }
    },
    "cleanUrls": true,
    "trailingSlash": false
}